  email = gordon@gordondiggs.com
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[core]
  editor = vim
  excludesfile = ~/.gitignore
[github]
  user = gdiggs
[alias]
  st = status -sb
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  purr = pull --rebase
  standup = log --since 1.week --author gdiggs
  stashall= stash --keep-index --include-untracked
[push]
  default = matching
[gpg]
  program = gpg
[include]
	path = ~/.gitconfig.local
